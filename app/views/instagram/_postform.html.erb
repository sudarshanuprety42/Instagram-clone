
<%= form_with model: @post,scope: :post, local: true,url: {action: "create",controller:"posts"},html: {class: "postform md-form"} do |f| %>
  <div class="form-group">
    <%= f.text_field :description, class: 'captioninput', autocomplete: "description" %>
  </div>
  <div class="form-group">
    <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
  </div>
  <br>


  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
    </div>
    <div class="custom-file">
      <!-- <input type="file" class="custom-file-input" id="inputGroupFile01"
        aria-describedby="inputGroupFileAddon01"> -->
        <%= f.file_field :images, multiple:true, class:'custom-file-input' %>
      <label class="custom-file-label" for="inputGroupFile01">Choose Images</label>
    </div>
  </div>
<br>
  <div class="text-center">
    <%= f.submit 'Upload', class: 'btn btn-primary' %>
  </div>
<% end %>
